{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/make",
            "args": [
                "clean",
                "all"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Task generated by Debugger."
        },
        {
            "type": "shell",
            "label": "build and run nim model",
            "command": "/usr/bin/nim",
            "args": [
                "c",
                "-r",
                "sim.nim",
                "test.hex"
            ],
            "options": {
                "cwd": "${workspaceFolder}/nimmodel"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}